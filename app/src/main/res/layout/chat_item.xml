<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chatItem_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/imageView_imageIntoMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/chat_contentDescription"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_background_chat_message_sender"
        android:id="@+id/textView_message"
        android:padding="20dp"
        android:maxWidth="300dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        tools:text="Hey, this is your first chat message!" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_messageInformations"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_userOfThisMessage"
            android:textSize="15sp"
            tools:text="Bryan Ferreras-Roca" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_senderNameHourSeparator"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/sendername_hour_separator"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_hour"
            android:textSize="15sp"
            tools:text="9:31" />
    </LinearLayout>

</LinearLayout>