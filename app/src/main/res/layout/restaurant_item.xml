<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_restaurantName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Go4Lunch.Title"
        android:text="Le Zinc" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_restaurantAddress"
        app:layout_constraintTop_toBottomOf="@id/textView_restaurantName"
        app:layout_constraintStart_toStartOf="@id/textView_restaurantName"
        android:layout_marginTop="@dimen/margin_top_lines"
        style="@style/Go4Lunch.Paragraph"
        android:text="12 rue du Faubourg PoissonniÃ¨re" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_restaurantOpenHours"
        app:layout_constraintTop_toBottomOf="@id/textView_restaurantAddress"
        app:layout_constraintStart_toStartOf="@id/textView_restaurantAddress"
        android:layout_marginTop="@dimen/margin_top_lines"
        style="@style/Go4Lunch.Paragraph"
        android:text="Open util 7 pm" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_restaurantDistance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/restaurant_picture"
        android:layout_marginTop="@dimen/margin_top_lines"
        android:layout_marginRight="@dimen/margin_top_lines"
        style="@style/Go4Lunch.Paragraph"
        android:text="120m" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_restaurantParticipantsNumber"
        app:layout_constraintTop_toBottomOf="@id/textView_restaurantDistance"
        app:layout_constraintEnd_toStartOf="@id/restaurant_picture"
        android:layout_marginTop="@dimen/margin_top_lines"
        android:layout_marginRight="@dimen/margin_top_lines"
        style="@style/Go4Lunch.Paragraph"
        android:text="(2)" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_restaurantStars"
        app:layout_constraintTop_toBottomOf="@id/textView_restaurantParticipantsNumber"
        app:layout_constraintEnd_toStartOf="@id/restaurant_picture"
        android:layout_marginTop="@dimen/margin_top_lines"
        android:layout_marginRight="@dimen/margin_top_lines"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:numStars="3"
        android:rating="2"
        android:progressTint="@color/primaryColor"
        android:secondaryProgressTint="@android:color/transparent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/restaurant_picture"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/restaurant_picture_tools" />

</androidx.constraintlayout.widget.ConstraintLayout>