<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Go4Lunch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/primarytextColor</item>
        <item name="android:actionBarTabTextStyle">@color/white</item>
    </style>
    <!-- Fullscreen -->
   <!--<style name="Fullscreen" parent="Go4Lunch">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>&ndash;&gt;
    </style>-->
    <!-- Classic paragraph -->
    <style name="Go4Lunch.Paragraph" parent="Go4Lunch">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/secondarytextColor</item>
    </style>
    <!-- Title -->
    <style name="Go4Lunch.Title" parent="Go4Lunch">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Go4Lunch.RestaurantOpen" parent="Go4Lunch.Paragraph">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <!-- Login buttons -->
    <style name="LoginButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Toolbar -->
    <style name="Go4Lunch.Toolbar" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColor">@color/primarytextColor</item>
    </style>
    <!-- Toolbar title theme -->
    <style name="Go4Lunch.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>